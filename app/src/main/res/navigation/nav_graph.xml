<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authGateFragment">

    <fragment
        android:id="@+id/roomDetailFragment"
        android:name="com.szokolaipecsy.companystatus.ui.RoomDetailFragment"
        android:label="Room details"
        tools:layout="@layout/fragment_room_detail">
        <argument
            android:name="roomId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/authGateFragment"
        android:name="com.szokolaipecsy.companystatus.ui.auth.AuthGateFragment"
        android:label="AuthGate">

        <action
            android:id="@+id/action_authGate_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_authGate_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/authGateFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.szokolaipecsy.companystatus.ui.auth.LoginFragment"
        android:label="Login">

        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />

        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.szokolaipecsy.companystatus.ui.auth.RegisterFragment"
        android:label="Register">

        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.szokolaipecsy.companystatus.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_roomDetailFragment"
            app:destination="@id/roomDetailFragment" />

        <action
            android:id="@+id/action_homeFragment_to_createRoomFragment"
            app:destination="@id/createRoomFragment" />

    </fragment>

    <fragment
        android:id="@+id/createRoomFragment"
        android:name="com.szokolaipecsy.companystatus.ui.CreateRoomFragment"
        android:label="Create Room"
        tools:layout="@layout/fragment_create_room" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.szokolaipecsy.companystatus.ui.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.szokolaipecsy.companystatus.ui.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

</navigation>
